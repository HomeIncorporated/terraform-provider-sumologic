package sumologic

import (
	"encoding/base64"
	"net/url"
)

type SumoLogic struct {
	AccessId    string
	AccessKey   string
	EndpointUrl *url.URL
}

func Client(accessId, accessKey, endpointUrl string) (*SumoLogic, error) {
	s := &SumoLogic{
		AccessId:  accessId,
		AccessKey: accessKey,
	}
	s.EndpointUrl, _ = url.Parse(endpointUrl)

	return s, nil
}

func basicAuth(accessid, accesskey string) string {
	auth := accessid + ":" + accesskey
	return base64.StdEncoding.EncodeToString([]byte(auth))
}
